{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "[%(asctime)s] [%(levelname)s] [%(filename)s %(funcName)s():%(lineno)s] %(message)s"
    },
    "custom": {
      "format": "%(asctime)s %(levelname)s: %(message)s",
      "datefmt": "%Y%m%d %T"
    }
  },
  "handlers": {
    "default": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.StreamHandler"
    },
    "detailed_file_handler": {
      "level": "DEBUG",
      "filename": "dt-{time}.log",
      "class": "logging.handlers.TimedRotatingFileHandler",
      "formatter": "standard",
      "when": "d",
      "interval": 1,
      "backupCount": 0
    },
    "error_file_handler": {
      "level": "ERROR",
      "filename": "dt-error-{time}.log",
      "class": "logging.handlers.TimedRotatingFileHandler",
      "formatter": "standard",
      "when": "d",
      "interval": 1,
      "backupCount": 0
    }
  },
  "loggers": {
    "": {
      "handlers": [
        "default",
        "detailed_file_handler",
        "error_file_handler"
      ],
      "level": "INFO",
      "propagate": "True"
    }
  }
}
